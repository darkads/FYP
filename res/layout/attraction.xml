<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#98AFC7">
	<ImageButton
		android:layout_height="96dip"
		android:id="@+id/imageView2"
		android:layout_width="132dip"
		android:layout_gravity="center"></ImageButton>
	<TableLayout
		android:layout_width="match_parent"
		android:id="@+id/tableLayout1"
		android:layout_height="wrap_content">
		<TableRow
			android:id="@+id/tableRow2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:text="Shop Name"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:textColor="#000000"
				android:paddingRight="10px"></TextView>
			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:id="@+id/shopname"
				android:layout_width="wrap_content"></TextView>
			<Button
				android:layout_height="wrap_content"
				android:id="@+id/editShop"
				android:text="Edit"
				android:layout_width="50sp"></Button>
		</TableRow>
	</TableLayout>
	<TableLayout
		android:layout_width="match_parent"
		android:id="@+id/tableLayout2"
		android:layout_height="wrap_content">
		<TableRow
			android:id="@+id/tableRow5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000000"
				android:layout_height="wrap_content"
				android:id="@+id/textView9"
				android:layout_width="wrap_content"
				android:text="Product Name:"></TextView>
			<EditText
				android:id="@+id/txtProductname"
				android:layout_width="180dp"
				android:layout_height="wrap_content"></EditText>
		</TableRow>
		<TableRow
			android:id="@+id/tableRow5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:text="Category:"
				android:textColor="#000000"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:id="@+id/textView2"
				android:layout_width="wrap_content"></TextView>
			<Spinner
				android:layout_height="wrap_content"
				android:id="@+id/categorylist"
				android:layout_width="wrap_content"></Spinner>
		</TableRow>
		<TableRow
			android:id="@+id/tableRow7"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000000"
				android:layout_height="wrap_content"
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:text="Brand:"></TextView>
			<EditText
				android:id="@+id/txtBrand"
				android:layout_width="180dp"
				android:layout_height="wrap_content"></EditText>
		</TableRow>
		<TableRow
			android:id="@+id/tableRow8"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000000"
				android:layout_height="wrap_content"
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:text="Price:"></TextView>
			<EditText
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:id="@+id/txtdp"
				android:layout_width="180dp"></EditText>
		</TableRow>
		<TableRow
			android:id="@+id/tableRow9"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_height="wrap_content"
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:text="Percent Discount:"
				android:textColor="#000000"></TextView>
			<EditText
				android:layout_height="wrap_content"
				android:inputType="number"
				android:id="@+id/txtPercent"
				android:layout_width="180dp"></EditText>
		</TableRow>
		<TableRow
			android:id="@+id/tableRow10"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_height="wrap_content"
				android:id="@+id/textView3"
				android:layout_width="wrap_content"></TextView>
		</TableRow>
		<TableRow
			android:id="@+id/tableRow11"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<Button
				android:text="Submit"
				android:id="@+id/uploadProduct"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></Button>
		</TableRow>
	</TableLayout>
</LinearLayout>
