<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#98AFC7">
       <TableLayout android:layout_width="match_parent" android:id="@+id/tableLayout2" android:layout_height="wrap_content">
        <TableRow android:id="@+id/tableRow5" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:attr/textAppearanceSmall"  android:textColor="#000000" android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_width="wrap_content" android:text="Shop Name:"></TextView>
        <EditText android:id="@+id/txtShopname" android:layout_width="180dp" android:layout_height="wrap_content"></EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow5" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Address:"  android:textColor="#000000"  android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/textView2" android:layout_width="wrap_content"></TextView>
            <EditText android:id="@+id/txtShopaddress" android:layout_width="180dp" android:layout_height="wrap_content"></EditText>
        </TableRow>
        </TableLayout>
        <TableLayout android:layout_width="fill_parent" android:id="@+id/tableLayout3" android:layout_height="wrap_content">
        <TableRow android:id="@+id/tableRow12" android:layout_width="wrap_content" android:layout_height="wrap_content">
           <ImageButton android:layout_height="300dip" android:id="@+id/imageView2" android:layout_width="320dip"></ImageButton>
        </TableRow>
        <TableRow android:id="@+id/tableRow11" android:layout_width="wrap_content" android:layout_height="wrap_content">
           <Button android:text="Submit" android:id="@+id/uploadProduct" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>
